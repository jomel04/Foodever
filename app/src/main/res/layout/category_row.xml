<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/parent_layout">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:id="@+id/tvAddress" app:layout_constraintStart_toStartOf="@+id/tvName"
            app:layout_constraintEnd_toEndOf="@+id/tvName" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvName" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="139dp"
            android:layout_height="82dp" app:srcCompat="@drawable/foodever_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView3"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="304dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <RatingBar
            android:layout_width="82dp"
            android:layout_height="17dp"
            app:layout_constraintStart_toStartOf="@+id/tvAddress" app:layout_constraintEnd_toEndOf="@+id/tvAddress"
            android:id="@+id/rbRate" android:isIndicator="false"
            style="@style/Widget.AppCompat.RatingBar.Small"
            app:layout_constraintTop_toBottomOf="@+id/tvAddress"
            android:rating="5"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/tvReviews"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/rbRate"
            app:layout_constraintEnd_toEndOf="@+id/rbRate" app:layout_constraintHorizontal_bias="0.612"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/rbRate"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@+id/imageView3"
            android:id="@+id/tvName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.517"
            android:textAlignment="center" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>